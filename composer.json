{
    "name": "entreya/flux",
    "description": "Real-time workflow streaming library for PHP — GitHub Actions-style live console output in the browser.",
    "type": "library",
    "license": "MIT",
    "keywords": ["workflow", "sse", "streaming", "console", "yaml", "ci", "real-time"],
    "homepage": "https://github.com/entreya/flux",
    "authors": [
        {
            "name": "Entreya",
            "email": "dev@entreya.com",
            "homepage": "https://entreya.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/expression-language": "^7.4"
    },
    "suggest": {
        "symfony/yaml": "Required to use Flux::fromYaml() — run: composer require symfony/yaml"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Entreya\\Flux\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Entreya\\Flux\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
